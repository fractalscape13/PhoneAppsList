@{
  Layout = "_Layout";
}

@using PhoneApps.Models;

<h3>Here are all the applicaions in this category:</h3>

<ol>
@foreach (Item item in @Model["apps"])
{
  <li><a href='/uses/@Model["use"].Id/apps/@app.Id'>@item.Description</a></li>
}
</ol>

<p><a href='/uses/@Model["use"].Id/apps/new'>Add a new item</a></p>
<p><a href='/uses'>Return to category list</a></p>
<p><a href='/'>Return to Main Page</a></p>